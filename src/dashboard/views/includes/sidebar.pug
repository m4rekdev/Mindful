#sidebar.float-left.bg-dash-menu
    a(href='/dashboard')
        .icon.round.shadow
            img.round(alt=user.username, src=user.avatarUrl(64))
    hr
    each guild of guilds
        a(href="/servers/" + guild.id)
            .icon.round.shadow(data-toggle="tooltip", data-placement="right", title=guild.name)
                if guild.icon
                    img.round(alt=guild.name, src=guild.iconURL({ dynamic: true, size: 64 }))
                else
                    p.text-center.abbr #{guild.nameAcronym}
    a(href='/invite')
        .icon.round.shadow
            p.abbr.text-success.text-center #[i.fas.fa-plus]