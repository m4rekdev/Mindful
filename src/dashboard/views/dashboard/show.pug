doctype
html(lang="en")
    head
        include ../includes/header.pug
    body.bg-dark
        include ../includes/sidebar.pug

        #sidebarExtension.bg-dash-menu
            header.text-center.pt-4
                .large-icon.shadow.round
                    if server.icon
                        img.round(src=server.iconURL({ dynamic: true, size: 128 }), alt=server.name)
                    else
                        p.text-center.abbr #{server.nameAcronym}
                h4.pt-2 #{server.name}
            hr
            .tabs.navbar-nav.text-center
                a#player(href="#").bg-commands #[i.fas.fa-music.pr-1] Player
                a#settings(href="#").bg-commands #[i.fas.fa-cogs.pr-1] Settings

        include ../includes/navbar.pug

        section.cont.bg-transparent.text-center
            header.text-center.pt-4
                .large-icon.shadow.round
                    if server.icon
                        img.round(src=server.iconURL({ dynamic: true, size: 128 }), alt=server.name)
                    else
                        p.text-center.abbr #{server.nameAcronym}
                h1.display-3 #{server.name}
            hr
            include modules/player
            include modules/settings

        script(defer)
            include ../includes/guild.js